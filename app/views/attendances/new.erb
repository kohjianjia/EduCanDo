<body style="background-image: url(http://cpml.com.au/wp-content/uploads/2016/04/CPML-background21.jpg);">
	<div class="container-fluid mb-5">

		<div class="container" style="margin-top: 2%;">
				<div class="row">
							<div class="mb-4" style="margin: auto; margin-top: 20vh;">
								<div class="card" style="background-color: #FFFFFF99; width: 250px;">
									<div class="card-body text-center" >
											<% if !(Attendance.find_by(user_id: current_user.id,event_id: @event.id)) %>
												<%= form_with scope: :attendance, url: event_attendances_path, local: true do |form| %>
													<div class="pt-2 mt-4">
														<%= form.submit :class => "btn btn-info text-center" %>
													</div>
												<% end %>
											<% else %>
												<h4 style="">Your attendance has been saved.</h4>
												<%= link_to 'Back to Event', event_path(@event), :class => "btn btn-info btn-sm mt-2 text-center" %>
											<% end %>
									</div>
								</div>
							</div>
				</div>

		</div>

	</div>
</body>







