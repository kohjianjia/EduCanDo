<body style="background-image: url(http://cpml.com.au/wp-content/uploads/2016/04/CPML-background21.jpg);">
	<div class="container-fluid mb-5">

		<div class="container" style="margin-top: 2%;">

			<h2 style="margin-bottom: 2%">Attendance history</h2>
			<div class="row">
				<% @attendance.each do |attend| %>
					<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
							<div class="card" style="background-color: #FFFFFF99">
								<div class="card-body">
									<p><strong>Title: </strong><%= attend.event.title %></p>
									<p class="text-capitalize"><strong>Category: </strong><%= attend.event.category %></p>
									<p><strong>Date: </strong><%= attend.event.event_date %></p>
										<%= link_to 'More details', event_path(attend.event), :class => "btn btn-secondary mb-1" %>
								</div>
							</div>
						</div>
				<% end %>
			</div>

		</div>

	</div>
</body>