<div id="clearance" class="sign-up">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <% if request.path_info == '/sign_up/student' %>
    	<%= form.hidden_field :role, :value => "student" %>
    <% else %>
    	<%= form.hidden_field :role, :value => "staff" %>
    <% end %>

    <div class="submit-field">
      <%= form.submit %>
    </div>
    
  <% end %>
</div>
