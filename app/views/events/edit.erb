<h1>Update event</h1>

<%= form_with(model: @event, local: true) do |form| %>

	<div class="p-2 bd-highlight mt-2">
		<h3><strong>Category: </strong><%= @event.category %></h3>
	</div>

	<div class="mt-3">
		<h3><%= form.label :description %>:</h3>
		<%= form.text_area :description, :required => true %>
	</div>

	<div class="pt-2 mt-4">
		<%= form.submit %>
		<%= link_to 'Back', events_path, :class => "pl-2" %>
	</div>
<% end %>	