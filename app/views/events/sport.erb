<body class="sign-in" style="background-image: url(http://cpml.com.au/wp-content/uploads/2016/04/CPML-background21.jpg);">
<div class="container-fluid my-3" >
	<div style="padding-left: 2%; padding-right: 3%">

		<h2 style="margin-top: 2%; margin-bottom: 2%">
			All Events
			<% if signed_in? %>
				<%= link_to 'Create new event', new_event_path, :class => "btn btn-info ml-2" %>
			<% end %>
		</h2>

		<div class="row">
			<% @event.order(event_date: :desc, start_time: :desc).each do |event| %>
					<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
						<div class="card" style="background-color : #FFFFFF99;">
							<div class="card-body">
								<p><strong>Title: </strong><%= event.title %></p>
								<p class="text-capitalize"><strong>Category: </strong><%= event.category %></p>
								<p><strong>Date: </strong><%= event.event_date %></p>
								<p><strong>Time: </strong><%= event.start_time %> to <%= event.end_time %></p>

								
								<% if current_user != nil %>
									<% if event.user_id == current_user.id %>
										<%= link_to 'More details', event_path(event), :class => "btn btn-info mb-1" %>
							 		<% else %>
										<%= link_to 'More details', event_path(event), :class => "btn btn-secondary mb-1" %>
									<% end %>
								<% end %>
							</div>
						</div>
					</div>
			<% end %>
		</div>

	</div>
</div>
</body>