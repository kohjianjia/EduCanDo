<h1>New event</h1>
<%= form_with scope: :event, url: events_path, local: true do |form| %>

<!-- 	<div class="mt-3">
		<h3><%= form.label :category %>:</h3>
		<%= form.text_field :category, :required => true %>
	</div> -->
	<div class="p-2 bd-highlight mt-2">
	   <h3> <%= form.label :category %>:</h3>
	   <%= form.radio_button :category, "class" %>
	   Class/Lecture
	   <%= form.radio_button :category, "presentation" %>
	   Presentation
	   <%= form.radio_button :category, "seminar" %>
	   Seminar
	   <%= form.radio_button :category, "sport" %>
	   Sport
	   <%= form.radio_button :category, "other" %>
	   Other
	</div>

	<div class="mt-3">
		<h3><%= form.label :description %>:</h3>
		<%= form.text_area :description, :required => true %>
	</div>


	<div class="pt-2 mt-4">
		<%= form.submit %>
	</div>
<% end %>	


	
