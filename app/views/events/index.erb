<h1>All Events</h1>

<% @event.order(updated_at: :desc).each do |event| %>

	<p><strong>Category: </strong><%= event.category %></p>
	<p><strong>Description: </strong><%= event.description %></p>

	<%= link_to 'Read more', event_path(event), :class => "btn btn-primary" %>

	<% if current_user != nil %>
		<% if event.user_id == current_user.id %>
			<%= link_to 'Update', edit_event_path(event), :class => "btn btn-primary" %>
			<%= link_to 'Delete', event_path(event), :class => "btn btn-primary",
		 method: :delete, data: {confirm: 'Are you sure?'} %>
		<% end %>
	<% end %>
	<hr>

<% end %>