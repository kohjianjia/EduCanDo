<body style="background-image: url(http://cpml.com.au/wp-content/uploads/2016/04/CPML-background21.jpg);">
    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <div class="col-lg-3">

          <div class="list-group animated infinite pulse delay-5s mt-2" style="font-family: courier new">
            <h1 class="my-4 animated infinite bounce delay-5s mt-2" style="font-family: impact; font-size: 60px">REWARDS</h1>
            <p class="list-group-item" style="background-color: #FFFFFF99;">Name : <%= current_user.first_name %> <%= current_user.last_name %></p>
            <p class="list-group-item" style="background-color: #FFFFFF99;">Role : <%= current_user.role %></p>
            <p class="list-group-item" style="background-color: #FFFFFF99;">Total points : <%= current_user.point %></p>
            <p class="list-group-item" style="background-color: #FFFFFF99;">Level : 
              <% if @user.level == "Plastic" %>
                <img src="http://pngimg.com/uploads/star/star_PNG41467.png" style="margin-left: 1px; height: 40px; width: 40px;">
              <% elsif @user.level == "Bronze" %>
                <img src="https://vignette.wikia.nocookie.net/acnewleaf/images/0/0a/Bronze_star_icon.png/revision/latest?cb=20131011063242g" style="margin-left: 1px; height: 40px; width: 40px;">
              <% elsif @user.level == "Silver" %>
                <img src="http://pngimg.com/uploads/star/star_PNG41509.png" style="margin-left: 1px; height: 40px; width: 40px;">
              <% elsif @user.level == "Gold" %>
                <img src="http://pngimg.com/uploads/star/star_PNG41518.png" style="margin-left: 1px; height: 40px; width: 40px;">
              <% else %>
                <%= image_tag "bluestar.png", style: "margin-left: 1px; height: 40px; width: 40px;" %>
              <% end %>
            </p>
          </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active">
                <img class="d-block img-fluid" width="900" height="350" src="https://cdn.grab.com/my/wp-content/uploads/sites/8/2016/08/grabrewards_my_tile_dominos-1.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" width="900" height="350" src="https://cdn.grab.com/my/wp-content/uploads/sites/8/2016/08/grabrewards_my_tile_juiceworks-02_silver.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" width="900" height="350" src="https://cdn.grab.com/my/wp-content/uploads/sites/8/2016/08/grabrewards_my_tile_watsons.jpg" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

          <div class="row">

            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100" style="background-color: #FFFFFF99;>
                <a href="#"><img class="card-img-top" src="https://cdn.grab.com/my/wp-content/uploads/sites/8/2016/08/grabrewards_my_tile_juiceworks-02_member.jpg" alt=""></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <p>Juice Works</p>
                  </h4>
